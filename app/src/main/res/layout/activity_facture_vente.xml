<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="my.mehrezapplication.FactureVente"
    android:background="#FFC5E9E3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="77dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Article :" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnercin"

        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
       />


</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/qte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Qte"
                android:inputType="number"
                android:maxLength="8" />

        </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:orientation="horizontal"
          android:weightSum="1">

          <Button
              android:id="@+id/btn_ajout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"



              android:background="@drawable/angry_btn"
              android:shadowColor="#FFFF4081"
              android:shadowDx="-6"
              android:shadowDy="-1"
              android:shadowRadius="25"
              android:text="Ajouter"
              android:textColor="#FFFF4081"
              android:textSize="20sp"

              />
          <Button
              android:id="@+id/btn_anuuler"


              android:layout_width="match_parent"
              android:layout_height="wrap_content"

              android:background="@drawable/angry_btn"
              android:shadowColor="#FFFF4081"
              android:shadowDx="-6"
              android:shadowDy="-1"
              android:shadowRadius="25"
              android:text="Annuler"
              android:textColor="#FFFF4081"
              android:textSize="20sp"
           />


      </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/Col1"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.92"
                android:background="@android:color/holo_blue_bright"
                android:gravity="left"
                android:lineSpacingExtra="8sp"
                android:padding="4dp"
                android:text="Article"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/col2"
                android:layout_width="118dp"
                android:layout_height="26dp"
                android:layout_weight="0.77"
                android:background="@android:color/holo_blue_bright"
                android:gravity="center"
                android:text="Qte"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Col3"

                android:layout_width="91dp"
                android:layout_height="26dp"
                android:background="@android:color/holo_blue_bright"
                android:gravity="center"
                android:text="Totale TTC"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="404dp"></ListView>
    </LinearLayout>
</RelativeLayout>
