<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC5E9E3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/qrcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="QrCode"

                android:maxLength="25" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/codearticle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Code Article"

                android:maxLength="25" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/desi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:capitalize="characters"
                android:hint="Designiation" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="417dp"
            android:orientation="vertical">



            <Button
                android:id="@+id/btn_ajout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:background="@drawable/angry_btn"
                android:shadowColor="#FFFF4081"
                android:shadowDx="-6"
                android:shadowDy="-1"
                android:shadowRadius="25"
                android:text="Ajouter"
                android:textColor="#FFFF4081"
                android:textSize="20sp"

                />
            <Button
                android:id="@+id/btn_anuuler"


                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/angry_btn"
                android:shadowColor="#FFFF4081"
                android:shadowDx="-6"
                android:shadowDy="-1"
                android:shadowRadius="25"
                android:text="Annuler"
                android:textColor="#FFFF4081"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_supp"


                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/angry_btn"
                android:shadowColor="#FFFF4081"
                android:shadowDx="-6"
                android:shadowDy="-1"
                android:shadowRadius="25"
                android:text="Supprimer"
                android:textColor="#FFFF4081"
                android:textSize="20sp" />






        </LinearLayout>
    </LinearLayout>

</ScrollView>
